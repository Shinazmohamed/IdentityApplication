{
  "AllowedHosts": "*",
  "AppSettings": {
    "TagEmployeeTableName": "SPDec2023"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Identity;User Id=webuser;password=123456;Trusted_Connection=false;Encrypt=false;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "E:\\My Projects\\Identity\\IdentityApplication\\IdentityApplication/Logs/log-development-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "Tag Application",
      "Environment": "Development"
    }
  }
}