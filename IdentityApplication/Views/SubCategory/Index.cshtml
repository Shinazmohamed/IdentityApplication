@using IdentityApplication.Core.ViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model CreateSubCategoryRequest

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" id="successMessage">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3" id="errorMessage">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post" asp-controller="SubCategory" asp-action="Create" id="subcategoryform">
    <div class="row">
        <input type="hidden" id="Id" name="Id" />
        <div class="col-md-6">
            <label for="categorySearch">Category:</label>
            @Html.DropDownListFor(m => m.SelectedCategory, Model.Categories, "All", new { @class = "form-select", id = "categorySearch" })
        </div>
        <div class="col-md-6">
            <label for="subcategorySearch">Sub Category:</label>
            @Html.DropDownListFor(m => m.SelectedSubCategory, Model.SubCategories, "All", new { @class = "form-select", id = "subcategorySearch" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-success" id="save">Save</button>
            <button type="button" class="btn btn-success" id="update" onclick="updateRecord()">Update</button>
            <button type="button" id="search" class="btn btn-success">Search</button>
            <button type="button" id="reset" class="btn btn-success">Reset All</button>
        </div>
    </div>
    <br />
</form>

<hr class="my-4">

<table id="subcategoryTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.CategoryId)</th>
            <th>@Html.DisplayNameFor(model => model.SubCategoryId)</th>

            <th>@Html.DisplayNameFor(model => model.SelectedCategory)</th>
            <th>@Html.DisplayNameFor(model => model.SelectedSubCategory)</th>
            <th>Handle</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("Delete", "SubCategory", FormMethod.Post, new { id = "deleteConfirmationForm" }))
            {
                <div class="modal-body">
                    <input type="hidden" id="mappingId" name="mappingId" />
                    <p>Are you sure you want to delete this record ?</p>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-dark" value="Delete" />
                    @* <button type="button" class="btn btn-primary" onclick="deleteRecord()">Delete</button> *@
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {

            setTimeout(function () {
                $("#successMessage").fadeOut("slow");
                $("#errorMessage").fadeOut("slow");
            }, 3000);

            $('#update').hide();

            setTimeout(function () {
                $("#successMessage").fadeOut("slow");
                $("#errorMessage").fadeOut("slow");
            }, 3000);

            var table = $('#subcategoryTable').DataTable({
                processing: true,
                serverSide: true,
                searching: false,
                ordering: false,
                ajax: {
                    url: '/SubCategory/GetList',
                    type: 'POST',
                    contentType: 'application/json',
                    data: function (d) {
                        var customFilter = {
                            draw: d.draw,
                            start: d.start,
                            length: d.length
                        };
                        return JSON.stringify(customFilter);
                    },
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'id', visible: false },
                    { data: 'categoryId', visible: false },
                    { data: 'subCategoryId', visible: false },
                    { data: 'selectedCategory' },
                    { data: 'selectedSubCategory' },
                    {
                        data: 'Id',
                        render: function (data, type, row) {
                            return '<i class="fa fa-edit btn-edit" data-id="' + data + '"></i> ' +
                                '<i class="fa fa-trash btn-delete" data-id="' + data + '"></i>';
                        }
                    }
                ]
            });

            // Handle Edit button click
            $('#subcategoryTable').on('click', '.btn-edit', function () {
                $('#save').hide();
                $('#update').show();

                var rowData = table.row($(this).parents('tr')).data();
                $('#Id').val(rowData.id);
                $('#categorySearch').val(rowData.categoryId).trigger('change');
                $('#subcategorySearch').val(rowData.subCategoryId).trigger('change');
            });

            // Handle Delete button click
            $('#subcategoryTable').on('click', '.btn-delete', function () {
                var rowData = table.row($(this).parents('tr')).data();

                $('#mappingId').val(rowData.id);
                console.log(rowData.id);
                $('#deleteConfirmationModal').modal('show');
            });

            $(document).on('click', '#reset', function () {
                $('#save').show();
                $('#update').hide();

                document.getElementById("categorySearch").selectedIndex = 0;
                document.getElementById("subcategorySearch").selectedIndex = 0;
                table.draw();
            });
        });


        function updateRecord() {

            var form = document.getElementById('subcategoryform');

            form.action = '/SubCategory/Update';

            // Submit the form
            form.submit();
        }
    </script>
}