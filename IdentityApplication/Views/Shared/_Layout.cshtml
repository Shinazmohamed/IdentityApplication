@using IdentityApplication.Business.Contracts
@using IdentityApplication.Core.ViewModel;

@inject IMenuBusiness _business;

@{
    var model = new MenuModel(_business);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tag Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IdentityApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Nolimit Tag Employee</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    @if (model != null && model.MenuItems != null && model.MenuItems.Any())
                    {
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                @foreach (var menuItem in model.MenuItems)
                                {
                                    <li class="nav-item @(menuItem.SubMenu != null && menuItem.SubMenu.Any() ? "dropdown" : "")">
                                        <a class="nav-link @(menuItem.SubMenu != null && menuItem.SubMenu.Any() ? "dropdown-toggle" : "text-dark")"
                                        @(menuItem.SubMenu != null && menuItem.SubMenu.Any() ? "data-bs-toggle=dropdown" : "")
                                           href="#"
                                           role="button"
                                           aria-expanded="false">
                                            @menuItem.DisplayName
                                        </a>

                                        @if (menuItem.SubMenu != null && menuItem.SubMenu.Any())
                                        {
                                            <ul class="dropdown-menu">
                                                @foreach (var subMenuItem in menuItem.SubMenu)
                                                {
                                                    <li>
                                                        <a class="dropdown-item"
                                                           href="@Url.Action(subMenuItem.Method, subMenuItem.Controller )">
                                                            @subMenuItem.DisplayName
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                }
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*     <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2023 - IdentityApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
